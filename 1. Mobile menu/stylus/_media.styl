/* Medium Devices, Desktops */
@media (max-width : 992px)
	.menu
		display flex
		justify-content flex-end
		&-wrapper 
			position absolute
			top 0
			left 0
			right 0
			bottom 0
			width 100%
			height 100%
			display flex
			flex-direction column
			align-items center 
			justify-content center
			transform translateX(-100%)
		&-mobile
			display block
		&-item 
			padding 7px 0

