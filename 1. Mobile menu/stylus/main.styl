@import "_font-face.styl"
@import "_libs.styl"
@import "_vars.styl"

// all
*
	box-sizing border-box
	&:before, &:after
		box-sizing border-box

// input required valid/invalid
body input:focus:required:invalid,
body textarea:focus:required:invalid
	color red
body input:required:valid,
body textarea:required:valid
	color #666

html, body
	height 100%

body
	font-size 16px
	min-width 320px
	position relative
	line-height 1.65
	font-family $default-font
	overflow-x hidden
	margin 0

img
	display block
	max-width 100%
	height auto

ul 
	margin 0
	padding 0

li 
	list-style-type none

h1,h2,h3,
h4,h5,h6 
	font-weight $default-weight
	margin 0
	padding 0
	
p 
	margin 0
	padding 0

a
	transition .2s color ease-in


// CUSTOM CSS

.wrapper
	max-width 1200px
	padding 0 15px
	margin 0 auto

.menu
	padding 30px 0
	&-wrapper 
		text-align center
		transition all .5s ease
	&-wrapper.active 
		transform translateX(0)
	&-item 
		display inline-block
		padding 0 15px
	&-mobile
		display inline-block
		position relative
		width 30px
		height 24px
		display none
	&-mobile.active 
		.menu
			&-line
				&-1 
					display none
				&-2 
					transform rotate(45deg)
				&-3 
					transform rotate(-45deg)
					top 10px
	&-line 
		position absolute
		width 100%
		height 2px
		background black
		border-radius 5px
		transition all .3s ease
		&-2 
			top 10px
		&-3 
			top 20px


a
	text-decoration none
	color black
	font-size 20px
	&:hover
		color gray


@import "_media.styl" // Always at the end
